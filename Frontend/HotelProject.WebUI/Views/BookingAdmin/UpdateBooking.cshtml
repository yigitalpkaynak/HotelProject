@model UpdateBookingDto

@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Rezervasyon Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="BookingID" />
    <label>Misafir Adı Soyadı</label>
    <input type="text" asp-for="Name" class="form-control mb-3" />

    <label>Misafir Mail Adresi</label>
    <input type="email" asp-for="Mail" class="form-control mb-3" />

    <label>Misafir Giriş Tarihi</label>
    <input type="date" asp-for="Checkin" class="form-control mb-3" />

    <label>Misafir Çıkış Tarihi</label>
    <input type="date" asp-for="Checkout" class="form-control mb-3" />

    <label>Yetişkin Sayısı</label>
    <input type="text" asp-for="AdultCount" class="form-control mb-3" />

    <label>Çocuk Sayısı</label>
    <input type="text" asp-for="ChildCount" class="form-control mb-3" />

    <label>Oda Sayısı</label>
    <input type="text" asp-for="RoomCount" class="form-control mb-3" />

    <label>Şehir</label>
    <input type="text" asp-for="City" class="form-control mb-3" />

    <label>Ülke</label>
    <input type="text" asp-for="City" class="form-control mb-3" />

    <label>Durum</label>
    <input type="text" asp-for="Status" class="form-control mb-3" />

    <label>Özel İstekler</label>
    <input type="text" asp-for="SpecialRequest" class="form-control mb-3" />

    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control mb-3" />

    <button class="btn btn-primary">Rezervasyonu Güncelle</button>
</form>